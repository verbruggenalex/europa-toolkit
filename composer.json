{
    "name": "verbruggenalex/drupal-toolkit",
    "description": "Drupal Toolkit packaged for composer",
    "type": "composer-plugin",
    "license": "EUPL-1.1",
    "homepage": "https://github.com/ec-europa/toolkit",
    "support": {
        "email": "Europamanagement@ec.europa.eu",
        "source": "https://github.com/ec-europa/toolkit"
    },
    "require": {
        "composer/installers": "^1.2",
        "composer-plugin-api": "^1.1",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drush/drush": "^9.0.0",
        "openeuropa/task-runner": "^1.0@beta",
        "wikimedia/composer-merge-plugin": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "VerbruggenAlex\\DrupalToolkit\\": "./src/"
        }
    },
    "extra":{     
        "class":"VerbruggenAlex\\DrupalToolkit\\TemplateInstallerPlugin"
    }
}
